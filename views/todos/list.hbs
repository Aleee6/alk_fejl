{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Tennivalók</h1>
</div>

<table class="table table-striped table-hover " id="errorTable">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Felhasználó</th>
            <th>Leírás</th>
            <th>Egyéb</th>
        </tr>   
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{username}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td><a href="/todos/edit/{{id}}" class="btn btn-success">Szerkesztés</a>
            <a href="/todos/delete/{{id}}" class="btn btn-danger">Törlés</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/todos/new" class="btn btn-primary">Új tennivaló felvitele</a></p>